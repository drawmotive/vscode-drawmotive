{
  "name": "vscode-drawmotive",
  "displayName": "DrawMotive - Diagram & Flowchart Editor",
  "description": "Create technical diagrams, flowcharts, and visual documentation with embedded PNG files. Draw offline, version control friendly.",
  "version": "0.1.0",
  "publisher": "drawmotive",
  "repository": {
    "type": "git",
    "url": "https://github.com/drawmotive/vscode-drawmotive.git"
  },
  "bugs": {
    "url": "https://github.com/drawmotive/vscode-drawmotive/issues"
  },
  "homepage": "https://docs.drawmotive.com",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "diagram",
    "flowchart",
    "drawing",
    "uml",
    "technical diagram",
    "architecture diagram",
    "png",
    "visual",
    "documentation",
    "offline",
    "whiteboard",
    "sketch"
  ],
  "activationEvents": [
    "onCustomEditor:drawmotive.editor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "drawmotive.editor",
        "displayName": "DrawMotive Editor",
        "selector": [
          {
            "filenamePattern": "*.draw.png"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "drawmotive.newDrawing",
        "title": "New Diagram",
        "category": "DrawMotive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "vsce:package": "vsce package --no-dependencies",
    "vsce:publish": "vsce publish --no-dependencies",
    "vsce:publish-prerelease": "vsce publish --pre-release --no-dependencies",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "version:prerelease": "npm version prerelease --preid=rc --no-git-tag-version"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^8.54.0",
    "globals": "^15.14.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
