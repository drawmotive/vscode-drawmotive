{
  "name": "vscode-drawmotive",
  "displayName": "Drawmotive",
  "description": "Diagram editor for .draw.png files with embedded data",
  "version": "0.1.0",
  "publisher": "drawmotive",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "diagram",
    "drawing",
    "png",
    "visual"
  ],
  "activationEvents": [
    "onCustomEditor:drawmotive.editor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "drawmotive.editor",
        "displayName": "Drawmotive Editor",
        "selector": [
          {
            "filenamePattern": "*.draw.png"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "drawmotive.newDrawing",
        "title": "New Drawing",
        "category": "Drawmotive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/pngjs": "^6.0.5",
    "@types/vscode": "^1.108.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "pngjs": "^7.0.0"
  }
}
